[user]
	name = "franky"
	email = yinping@kooxoo.com
[merge]
    summary = true
    tool = vimdiff
[diff]
    renames = copy
	nonwordchars = "()<>,{/\"+"
[i18n]
    logoutputencoding = UTF-8
[color]
    diff = auto
    status = true
    branch = auto
	interactive = auto;
	ui = auto;
[status]
	submodulesummary = -1
[format]
	numbered = auto

[alias]
	sed = !git ls-files --stage | grep ^100 | awk '{print $4}' | xargs sed $@
	slg = shortlog --pretty='format:%h %s'
